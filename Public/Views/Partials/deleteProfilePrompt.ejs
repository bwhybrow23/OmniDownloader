<style>
  .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
  }

  #modal-content {
    background-color: #fefefe;
    margin: 15% auto; /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    width: 80%; /* Could be more or less, depending on screen size */
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }

  .profile-form {
    text-align: center;
  }

  .profile-form h2 {
    margin-bottom: 20px;
  }

  .profile-form p {
    margin-bottom: 20px;
  }

  .profile-form button {
    margin: 5px;
    padding: 10px 20px;
    font-size: 16px;
  }
</style>

<div id="deleteProfileModule" class="modal">
  <div id="modal-content">
    <span class="close" onclick="closeForm('deleteProfilePrompt')">&times;</span>
    <div id="deleteProfilePrompt" class="profile-form" style="display: none;">
      <h2>Confirm Delete</h2>
      <p>Are you sure you want to delete this profile?</p>
      <form id="deleteProfileForm" method="POST">
        <button type="submit">Yes, Delete</button>
        <button type="button" onclick="closeForm('deleteProfilePrompt')">Cancel</button>
      </form>
    </div>
  </div>
</div>

<script>
  function confirmDeleteProfile(user_id) {
    try {
      const deleteForm = document.getElementById('deleteProfileForm');
      deleteForm.action = `/profiles/delete/${user_id}`;
      document.getElementById('deleteProfileModule').style.display = 'block'; // Show the modal
      document.getElementById('deleteProfilePrompt').style.display = 'block'; // Show the prompt
    } catch (error) {
      console.error(error);
    }
  }

  function closeForm(formId) {
    document.getElementById('deleteProfileModule').style.display = 'none'; // Hide the modal
    document.getElementById(formId).style.display = 'none'; // Hide the prompt
  }
</script>
